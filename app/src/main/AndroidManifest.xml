<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.leisurelodge">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".UpdateProfile"/>
        <activity
            android:name=".ViewAllFeedbacks"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".ViewHotelFeedbacks" />
        <activity android:name=".MyFeedback" />
        <activity android:name=".MyProfile" />
        <activity android:name=".UpdateFeedback" />
        <activity android:name=".AddFeedback" />
        <activity android:name=".ViewHotel" />
        <activity
            android:name=".RegisterUser"
            android:noHistory="true" />
        <activity
            android:name=".LoginUser"
            android:noHistory="true" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>