<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mybooking">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="418dp"
        android:layout_height="241dp"
        android:background="@color/design_default_color_secondary_variant"
        tools:layout_editor_absoluteX="-3dp"
        tools:layout_editor_absoluteY="3dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="231dp"
            android:layout_height="44dp"
            android:layout_marginTop="24dp"
            android:fontFamily="sans-serif"
            android:text="Leisure Lounge"
            android:textColor="@color/white"
            android:textColorLink="#FFFFFF"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="26dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:fontFamily="sans-serif"
            android:text="Make a"
            android:textColor="#FFFFFF"
            android:textColorLink="#FFFFFF"
            android:textSize="45sp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="26dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Booking"
            android:textColor="#FFFFFF"
            android:textColorLink="#FFFFFF"
            android:textSize="45sp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            tools:layout_editor_absoluteX="26dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:backgroundTint="?android:attr/textColorHighlight"
        android:backgroundTintMode="src_in"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="70dp"
            android:layout_height="36dp"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="268dp"
            android:fontFamily="sans-serif"
            android:text="Date"
            android:textColor="@color/black"
            android:textColorLink="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="72dp"
            android:layout_height="36dp"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="120dp"
            android:fontFamily="sans-serif"
            android:text="Room"
            android:textColor="@color/black"
            android:textColorLink="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="77dp"
            android:layout_height="33dp"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="180dp"
            android:fontFamily="sans-serif"
            android:text="Guest"
            android:textColor="@color/black"
            android:textColorLink="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/editTextDate3"
            android:layout_width="142dp"
            android:layout_height="31dp"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="236dp"
            android:ems="10"
            android:inputType="date"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/editTextDate4"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/editTextDate4"
            android:layout_width="142dp"
            android:layout_height="31dp"
            android:layout_marginEnd="44dp"
            android:ems="10"
            android:inputType="date"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="463dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:text="to"
            app:layout_constraintEnd_toStartOf="@+id/editTextDate4"
            tools:layout_editor_absoluteY="470dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="44dp"
            android:layout_marginBottom="48dp"
            android:background="@color/teal_700"
            android:backgroundTint="@color/white"
            android:text="Book"
            android:textColor="@color/white"
            android:textColorHighlight="@color/teal_200"
            android:textColorHint="@color/teal_200"
            android:textCursorDrawable="@color/teal_200"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/editTextNumber"
            android:layout_width="179dp"
            android:layout_height="39dp"
            android:layout_marginEnd="76dp"
            android:layout_marginBottom="180dp"
            android:ems="10"
            android:inputType="number"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/editTextNumber2"
            android:layout_width="179dp"
            android:layout_height="39dp"
            android:layout_marginEnd="76dp"
            android:layout_marginBottom="120dp"
            android:ems="10"
            android:inputType="number"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>